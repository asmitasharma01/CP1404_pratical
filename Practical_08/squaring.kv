BoxLayout:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.4
        padding: 10
        spacing: 10

        Button:
            text: 'Clear'
            on_press: app.handle_clear()

        TextInput:
            id: input_name
            text: ''
            hint_text: 'Enter your name'

        Button:
            text: 'Greet'
            on_press: app.handle_greet()

        Label:
            text: 'Enter a number and press "Square".'
            color: (1, 1, 0, 1)

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.6
        padding: 10
        spacing: 10

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False

        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 1, 1)
